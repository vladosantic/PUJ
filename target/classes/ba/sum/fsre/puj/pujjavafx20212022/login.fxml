<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="BASELINE_LEFT" spacing="5.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="ba.sum.fsre.puj.pujjavafx20212022.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="errorMsg" textFill="RED">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <Label text="Unesite korisničko ime" />
        <TextField fx:id="usernameTxt" />
        <Label text="Unesite lozinku" />
        <PasswordField fx:id="passwordTxt" />
        <Button mnemonicParsing="false" onAction="#onLogin" text="Prijavi se" />
    </children>
</VBox>