<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="BASELINE_LEFT" prefHeight="300" prefWidth="400.0" spacing="5.0" style="-fx-background-color: #403c3c;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="25.0" prefWidth="382.0" text="PRIJAVA NA SUSTAV" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Candara" size="20.0" />
         </font>
      </Label>
        <Label text="Unesite email:" textFill="WHITE">
         <font>
            <Font name="Candara" size="14.0" />
         </font></Label>
        <TextField fx:id="emailTxt" />
        <Label text="Unesite lozinku" textFill="WHITE">
         <font>
            <Font name="Candara" size="14.0" />
         </font></Label>
        <PasswordField fx:id="passwordTxt" />
        <Button mnemonicParsing="false" onAction="#onLogin" prefHeight="31.0" prefWidth="82.0" text="Prijavi se" textAlignment="CENTER">
         <font>
            <Font name="Candara" size="12.0" />
         </font></Button>
      <Button alignment="CENTER" mnemonicParsing="false" onAction="#registracija" prefHeight="24.0" prefWidth="82.0" text="Registracija" textAlignment="RIGHT">
         <font>
            <Font name="Candara" size="12.0" />
         </font>
      </Button>
        <Label fx:id="errorMsg" prefHeight="19.0" prefWidth="385.0" textFill="RED">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
    </children>
</VBox>
